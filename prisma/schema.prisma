generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PSQL_URL")
}

model Subtask {
  id         String   @id
  title      String
  status     String   @default("pending")
  created_at DateTime @default(now())
  todoId     String
  Todo       Todo     @relation(fields: [todoId], references: [id])
}

model Todo {
  id         String    @id
  title      String
  status     String    @default("pending")
  created_at DateTime  @default(now())
  Subtask    Subtask[]
}
